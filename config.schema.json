{
  "pluginAlias": "LaurentHomebridgePlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Контроллер",
        "type": "string",
        "required": true,
        "default": "Laurent"
      },
      "accessories": {
        "title": "Устройство",
        "type": "array",
        "items": [
          {
            "type": "object",
            "properties": {
              "uniqueId": {
                "title": "Уникальный идентификатор",
                "type": "string",
                "default": "HFDJ"
              },
              "displayName": {
                "title": "Имя кнопки",
                "type": "string",
                "default": "OUT-9"
              },
              "outType": {
                "title": "Тип выхода 'out' (OUT), 'rel' (Relle)",
                "type": "string",
                "default": "out"
              },
              "out": {
                "title": "Номер выхода (out 1-12) (rel 1-4)",
                "type": "integer",
                "default": 9
              },
              "outInv": {
                "title": "Инвентировать состояние выхода true, false",
                "type": "boolean",
                "default": false
              },
              "mode": {
                "title": "Режим работы 'true', 'onOff', 'toggle'",
                "type": "string",
                "examples": [
                  "true",
                  "onOff",
                  "toggle"
                ],
                "default": "true"
              },
              "accessory": {
                "title": "Вид устройства 'Lightbulb', 'Outlet', 'Switch'",
                "type": "string",
                "default": "Lightbulb"
              }
            },
            "required": [
              "uniqueId",
              "displayName",
              "out",
              "mode",
              "accessory"
            ]
          }
        ]
      }
    }
  }
}